@model BookModel

@{
    ViewData["title"] = "Excluir registro do Livro";
}


<div class="container bg-light p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-black">Excluir livro cadastrado</h1>
    </div>

    <form method="post" asp-controller="Book" asp-action="DeleteBook">

        <input type="hidden" asp-for="Id" />

        <h2>Deseja realmente excluir o livro cadastrado?</h2>

        <div class="mb-3">
            <label for="title" class="form-label">Título</label>
            <input type="text" class="form-control" asp-for="Title" id="inpTxtTitulo" placeholder="Digite o nome do livro" disabled>
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Autor</label>
            <input type="text" class="form-control" asp-for="Author" id="inpTxtAutor" placeholder="Digite o nome do autor" disabled>
            <span class="text-danger" asp-validation-for="Author"></span>
        </div>
        <div class="mb-3">
            <label for="year" class="form-label">Ano</label>
            <input type="number" class="form-control" asp-for="Year" id="inpTxtAno" placeholder="Ano de lançamento" disabled>
            <span class="text-danger" asp-validation-for="Year"></span>
        </div>
        <div class="mb-3">
            <label for="publishing" class="form-label">Editora</label>
            <input type="text" class="form-control" asp-for="PublishingCompany" id="inpTxtEditora" placeholder="Digite a editora" disabled>
            <span class="text-danger" asp-validation-for="PublishingCompany"></span>
        </div>
        <div class="mb-3">
            <label for="isreaded" class="form-label">Leitura finalizada?</label>
            <input type="checkbox" asp-for="IsReaded" id="chkBxLeituraFinalizada" disabled>
        </div>
        <div class="mb-3">
            <label for="isdigital" class="form-label">Livro digital?</label>
            <input type="checkbox" asp-for="IsDigital" id="chkBxLivroDigital" disabled>
        </div>
        <div class="mb-3">
            <label for="cover" class="form-label">Capa do livro</label>
            <input type="text" class="form-control" asp-for="Cover" id="inpTxtCapa" placeholder="Digite o endereço da imagem na web" disabled>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Book" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>

@Html.ValidationSummary(true)
